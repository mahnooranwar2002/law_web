@model laywer_web.Models.lawyerViewModel



<main style="box-shadow:4px 8px 10px black">





    <div class="container">
        <div class="row">
            <div class="col">
                <form action="" class="form_data" autocomplete="off" style=" display: flex;
    padding-top: 20px;
    justify-items: center;
    justify-content: center;">
                    <input type="text" placeholder="search by name or dealing with...." name="search_text" style="  border: none;
        width: 50%;
        margin: 10px;
        border-radius: 1px;
        border: 2px solid grey;
        padding: 5px;
">
                    <input type="submit" value="search" style="  border: none;
        width: 15%;
        margin: 10px;
        border-radius: 1px;
        border: 2px solid grey;
        padding: 15px;
        border-radius: 10px;
        background-color: black;
        color: white;">
                </form>


                <table class="table">
                    <thead>
                        <tr style="color:white">
                            <th scope="col">client Name</th>
                            <th scope="col">lawyer</th>
                            <th scope="col">slot time</th>
                            <th scope="col">status</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lawyerData in Model.get_appointments)
                        {
                            <tr>
                                <th scope="col">@lawyerData.Booked_username</th>
                                <th scope="col">@lawyerData.lawyer_name</th>
                                <th scope="col">@lawyerData.slot_time</th>
                                <th scope="col">
                                @if (lawyerData.status == 0)
                                {
                                    <button class="btn btn-danger">
                                        <a href="@Url.Action("cancel_appointment","home",new{id=lawyerData.Booked_id})" style="color: white; text-decoration: none;">Cancel</a>
                                    </button>
                                }
                                else
                                {
                                    <p scope="col">@lawyerData.status_updates</p>
                                }
                                </th>

                            </tr>

                        }
                    </tbody>

                </table>

                @if (@TempData["error"] != null)
                {
                    <p style="text-align:center;color:red">@TempData["error"]</p>
                }
            </div>

        </div>
    </div>


</main>
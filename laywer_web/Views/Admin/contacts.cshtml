@model laywer_web.Models.lawyerViewModel
@{
    Layout = "../shared/_layout2.cshtml";
}
<style>
    .myunderline {
        height: 5px;
        background-color: #ff5821;
        width: 100%;
        margin-top: 5px;
        margin-bottom: 10px;
    }
</style>
<main>
    <form action="" class="form_data" autocomplete="off" style=" display: flex;
    padding-top: 20px;
    justify-items: center;
    justify-content: center;">
        <input type="text" placeholder="search by name or by services...." name="sreach_text" style="  border: none;
        width: 50%;
        margin: 10px;
        border-radius: 1px;
        border: 2px solid grey;
        padding: 5px;
">
        <input type="submit" value="search" style="  border: none;
        width: 15%;
        margin: 10px;
        border-radius: 1px;
        border: 2px solid grey;
        padding: 15px;
        border-radius: 10px;
        background-color: black;
        color: white;">
    </form>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" style="color:black">Contact Data Table</h5>
            <div class="myunderline"></div>
            <!-- Dark Table -->
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th scope="col">User Name</th>
                        <th scope="col">user Email</th>
                        <th scope="col">user subject</th>

                        <th scope="col">user massages</th>

                        <th scope="col"> Options</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var contact_data in Model.user_Contact)
                    {
                        <tr>
                            @*    <th scope="row"></th> *@

                            <td>@contact_data.user_name</td>
                            <td>@contact_data.user_email</td>

                            <td>@contact_data.user_sub</td>
                            <td>@contact_data.user_msg</td>
                            <td>
                                <button class="btn btn-danger">
                                    <a href="@Url.Action("deletecontact", "admin", new { id = contact_data.user_id })" style="color:white;">

                                        Delete

                                    </a>
                                </button>
                            </td>



                            @* <td>@lawyer_data.lawyer_name</td>
                        <td>@lawyer_data.lawyer_email</td>
                        <td>@lawyer_data.lawyer_password</td> *@
                            @* <td>
                        <button>
                        <a href="@Url.Action("deletelawyer","admin",new{id=lawyer_data.lawyer_id})">
                        Delete
                        </a>
                        </button>
                        </td> *@
                        </tr>
                    }
                    @* <tr>
                    <th scope="row">1</th>
                    <td>Brandon Jacob</td>
                    <td>Designer</td>
                    <td>28</td>
                    <td>2016-05-25</td>
                    </tr> *@

                </tbody>
            </table>
            <!-- End Dark Table -->
            @if (@TempData["error"] != null)
            {
                <p style="text-align:center;color:red">@TempData["error"]</p>
            }
        </div>
    </div>
</main>
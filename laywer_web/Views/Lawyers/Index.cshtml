@model laywer_web.Models.lawyerViewModel
@{
    Layout = "../shared/lawyer_dashboard.cshtml";
}
<style>
    .myicon {
        font-size: 1.5rem;
        color: white;
        margin: 8px;
    }

    .mycardbox {
        border: #ff5821 5px solid;
        background-color: #ff5821;
    }

        .mycardbox h5 {
            color: white;
        }

        .mycardbox h4 {
            color: white;
        }

        .mycardbox:hover {
            box-shadow: 4px 4px 10px grey;
        }

</style>
<main>

    <div class="card">
        <div class="card-body " style="height:80vh;">
           

            <div style=" display:flex; justify-content:center; justify-items:center; flex-wrap:wrap">
               
                <div class="card" style="width: 100%; margin:10px;">

                    <div class="card-body mycardbox" style="text-align:center ">
                        <i class="ri-calendar-check-line myicon"></i>

                        <h4 class="card-title" style="padding:20px;font-size:1.5em">
                            Appointment
                        </h4>
                        <h5 class="card-text" style="text-align:center">@ViewBag.countappointment</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    




</main>





